<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_people_layout_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="@dimen/fragment_horizontal_margin"
        android:layout_marginVertical="4dp"
        app:cardElevation="@dimen/card_elevation"
        app:cardCornerRadius="@dimen/card_corner_radius"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true">

            <ImageView
                android:id="@+id/image_view_item_people_avatar"
                android:layout_width="@dimen/item_people_image_length"
                android:layout_height="@dimen/item_people_image_length"
                android:layout_margin="8dp"
                android:padding="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/item_people_layout_detail"
                tools:src="@tools:sample/avatars" />
            <TextView
                android:id="@+id/text_view_item_people_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginHorizontal="8dp"
                app:layout_constraintTop_toTopOf="@+id/image_view_item_people_avatar"
                app:layout_constraintBottom_toTopOf="@+id/text_view_item_people_job_title"
                app:layout_constraintStart_toEndOf="@id/image_view_item_people_avatar"
                android:gravity="bottom"
                android:textAlignment="gravity"
                tools:text="Full Name" />
            <TextView
                android:id="@+id/text_view_item_people_job_title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginHorizontal="8dp"
                app:layout_constraintTop_toBottomOf="@+id/text_view_item_people_name"
                app:layout_constraintBottom_toBottomOf="@+id/image_view_item_people_avatar"
                app:layout_constraintStart_toEndOf="@id/image_view_item_people_avatar"
                android:gravity="top"
                android:textAlignment="gravity"
                tools:text="Job Title" />

            <ImageView
                android:id="@+id/item_people_expand_detail"
                android:layout_width="@dimen/item_people_image_length"
                android:layout_height="@dimen/item_people_image_length"
                android:padding="16dp"
                android:layout_marginHorizontal="8dp"
                app:layout_constraintTop_toTopOf="@+id/image_view_item_people_avatar"
                app:layout_constraintBottom_toBottomOf="@+id/image_view_item_people_avatar"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/ic_expand_more" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/item_people_layout_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginHorizontal="8dp"
                app:layout_constraintTop_toBottomOf="@+id/image_view_item_people_avatar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="gone">

                <TextView
                    android:id="@+id/text_view_item_people_email"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:gravity="top"
                    android:textAlignment="gravity"
                    tools:text="Email: helloworld@protonmail.com" />
                <TextView
                    android:id="@+id/text_view_item_people_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/text_view_item_people_email"
                    app:layout_constraintStart_toStartOf="parent"
                    android:gravity="top"
                    android:textAlignment="gravity"
                    tools:text="Phone: 01782 999 999" />
                <TextView
                    android:id="@+id/text_view_item_people_location"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/text_view_item_people_phone"
                    app:layout_constraintStart_toStartOf="parent"
                    android:gravity="top"
                    android:textAlignment="gravity"
                    tools:text="Location: London, UK" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>