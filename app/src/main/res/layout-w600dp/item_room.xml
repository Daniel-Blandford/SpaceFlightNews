<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="@dimen/fragment_horizontal_margin"
        android:layout_marginVertical="4dp"
        app:cardCornerRadius="26dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_view_item_room_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/image_view_item_room"
                app:layout_constraintStart_toStartOf="@id/image_view_item_room"
                app:layout_constraintEnd_toEndOf="@id/image_view_item_room"
                tools:text="Room name" />

            <ImageView
                android:id="@+id/image_view_item_room"
                android:layout_width="@dimen/item_room_image_length"
                android:layout_height="@dimen/item_room_image_length"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="8dp"
                android:padding="26dp"
                app:layout_constraintTop_toBottomOf="@+id/text_view_item_room_name"
                app:layout_constraintBottom_toTopOf="@+id/text_view_item_room_occupancy"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:tint="@android:color/white"
                tools:src="@drawable/ic_room_empty"
                android:background="@drawable/ic_circle" />

            <TextView
                android:id="@+id/text_view_item_room_occupancy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:layout_constraintEnd_toEndOf="@id/image_view_item_room"
                app:layout_constraintStart_toStartOf="@id/image_view_item_room"
                app:layout_constraintTop_toBottomOf="@id/image_view_item_room"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="Occupancy: 6"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>